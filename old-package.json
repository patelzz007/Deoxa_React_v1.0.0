{
    "name": "webpack-react-typescript-sass-modules",
    "version": "1.0.0",
    "description": "A boilerplate for React application which uses tsx and scss modules, and is bundled via webpack without CRA.",
    "main": "index.tsx",
    "scripts": {
      "bundle": "webpack",
      "test": "echo \"Error: no test specified\" && exit 1",
      "start": "webpack-dev-server --mode development --open --hot",
      "watch": "webpack --watch --mode production",
      "build": "rimraf ./dist && webpack --mode production",
      "check-types": "tsc",
      "prettier": "prettier --write src/**/*.{js,jsx,ts,tsx,css,scss,sass}",
      "prettier-format": "prettier --config .prettierrc \"src/**/*.{js,jsx,ts,tsx,css,scss,sass}\" --write"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
      "react": "^17.0.2",
      "react-dom": "^17.0.2",
      "rimraf": "^3.0.2"
    },
    "devDependencies": {
      "@babel/core": "^7.16.0",
      "@babel/preset-env": "^7.16.0",
      "@babel/preset-react": "^7.16.0",
      "@babel/preset-typescript": "^7.16.0",
      "@types/react": "^17.0.33",
      "@types/react-dom": "^17.0.10",
      "babel-loader": "^8.2.3",
      "css-loader": "^6.5.0",
      "file-loader": "^6.2.0",
      "html-webpack-plugin": "^5.5.0",
      "sass": "^1.43.4",
      "sass-loader": "^12.3.0",
      "style-loader": "^3.3.1",
      "typescript": "^4.4.4",
      "webpack": "^5.61.0",
      "webpack-cli": "^4.9.1",
      "webpack-dev-server": "^4.4.0"
    }
  }
  